<h1>Create User</h1>

<%= form_for @user do |f| %>
  <%= f.label :name, "Name: " %>
  <%= f.text_field :name %>

  <%= f.label :age, "Age: " %>
  <%= f.number_field :age %>

  <%= f.label :user_name, "Username: " %>
  <%= f.text_field :user_name %>

  <%= f.label :password, "Password: " %>
  <%= f.password_field :password %>

  <%= f.submit %>
<% end %>


